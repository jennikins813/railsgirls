<h1>Listing ideas</h1>


  <body>
    <% @ideas.each do |idea| %>
        <h2><%= link_to idea.name, idea %></h2>
        <p>Tags: <%= raw idea.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %></p>

        <%= link_to 'Show', idea %> |
        <%= link_to 'Edit', edit_idea_path(idea) %> 
      
 
    <% end %>
  </body>

